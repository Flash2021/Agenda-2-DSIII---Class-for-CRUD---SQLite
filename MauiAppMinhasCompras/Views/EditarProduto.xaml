<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.EditarProduto"
             Title="{Binding Descriçao}">

        <ContentPage.ToolbarItems>
            <ToolbarItem Text="salva" Clicked="ToolbarItem_Clicked"/>
        </ContentPage.ToolbarItems>


        <VerticalStackLayout Spacing="10" Padding="10">
            <Label Text="Descrição produto:" />
            <Entry x:Name="txt_descrição" Text="{Binding Descricao}"/>

            <Label Text="Quantidade:" />
            <Entry x:Name="txt_quantidade" Text="{Binding Quantidade}" Keyboard="Numeric"/>

            <Label Text="Preço unitário:" />
            <Entry x:Name="txt_preço" Text="{Binding Preco}" Keyboard="Numeric"/>
        </VerticalStackLayout>
</ContentPage>